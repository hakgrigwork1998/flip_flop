{
  "AllowedHosts": "*",
  "Casino_API": {
    "Base_Address": "http://192.168.220.33:9099/",
    "EndPoints": {
      "Authentication": "api/BetConstruct/Authentication",
      "GetBalance": "api/BetConstruct/GetBalance",
      "DoBet": "api/BetConstruct/DoBet",
      "DoWin": "api/BetConstruct/DoWin",
      "DoRolleback": "api/BetConstruct/DoRollback"
    }
  },
  "ConnectionString": {
    "FlipFlopDB": "server=localhost\\SQLEXPRESS;database=flip_flop_database_test;Trusted_Connection=Yes;"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": ".\\Logs\\log-information-{Date}.txt",
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": ".\\Logs\\log-warning-{Date}.txt",
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": ".\\Logs\\log-error-{Date}.txt",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Flip Flop Tests"
    }
  }
}
